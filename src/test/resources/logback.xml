<configuration>

    <!-- This appender prints log messages to the console (System.out) -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!--
              This pattern defines the format of each log line.
              %d{HH:mm:ss.SSS} = Timestamp
              [%thread]         = The name of the thread the log came from (very useful for debugging)
              %-5level          = The log level (INFO, DEBUG, etc.), padded to 5 characters
              %logger{36}       = The name of the logger (usually the class name), abbreviated
              %msg%n            = The actual log message, followed by a newline
            -->
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--
      This is a specific logger for our SDK's code.
      By setting the level to DEBUG, we can see detailed trace messages from our own classes
      without getting spammed by other libraries.
      You can change this to "TRACE" for even more detail, or "INFO" for less.
    -->
    <logger name="io.github.ceakins.zello" level="DEBUG"/>

    <!--
      This is the root logger. It applies to all other libraries in the project.
      Setting it to INFO keeps the output clean by hiding the verbose DEBUG logs
      from libraries like lwjgl, Java-WebSocket, etc.
    -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>